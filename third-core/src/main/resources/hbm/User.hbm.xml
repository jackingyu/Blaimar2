<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.third.model.User" table="user">
		<id name="pk" type="java.lang.Integer">
			<column name="pk" unique="true" />
			<generator class="uuid" />
		</id>
		<property column="id" lazy="false" name="id"
			type="java.lang.String" />
		<property column="password" lazy="false" name="password"
			type="java.lang.String" />
		<property column="name" lazy="false" name="name" type="java.lang.String" />
		<set name="userGroups" table="user_usergroup" inverse="false">  
            <key column="userPK" />  
            <many-to-many class="com.third.model.UserGroup" column="userGroupPK" />
        </set>  
	</class>
	<query name="getUserById">
    <![CDATA[  
      from com.third.model.User u where u.id=?
    ]]>
	</query>
</hibernate-mapping>
